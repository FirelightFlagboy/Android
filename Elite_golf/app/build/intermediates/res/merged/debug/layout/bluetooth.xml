<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_marginBottom="5dip"
            android:layout_height="50dip"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:id="@+id/View"
            />
        <Button
            style="@style/icon_menu"
            android:id="@+id/Menu" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/title_msg"
            android:layout_alignBaseline="@id/Menu"
            android:textColor="@color/colorWhite"
            android:layout_centerInParent="true"
            android:text="Bluetooth"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/View"
            android:text="Scan"
            android:id="@+id/Scan"
            android:onClick="onClickScan"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/View"
            android:layout_toRightOf="@id/Scan"
            android:id="@+id/Text">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:text="Scanned Devices"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:text="Connected Devices"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/Text"
            android:layout_toRightOf="@id/Scan">
            <ListView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:id="@+id/Scanned_List"
                android:layout_margin="5px"
                android:layout_weight="50"
                android:background="@drawable/border"
                android:choiceMode="singleChoice"
                android:fadeScrollbars="false"
                android:listSelector="@color/colorGrey"></ListView>
            <ListView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:id="@+id/Connected_List"
                android:layout_margin="5px"
                android:layout_weight="50"
                android:background="@drawable/border"
                android:choiceMode="singleChoice"
                android:fadeScrollbars="false"
                android:listSelector="@color/colorGrey"></ListView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Text"
            android:id="@+id/But_Co_Di"
            android:layout_marginTop="110dp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:text="Connect"
                android:id="@+id/Connect"
                android:onClick="onClickConnect"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:text="Disconnect"
                android:id="@+id/Disconnect"
                android:onClick="onClickDisconnect"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Connected Device Name"
            android:id="@+id/selected_1sheeld_name"
            android:layout_below="@id/But_Co_Di"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Controller">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:id="@+id/Settings"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Baud Rate"
                android:layout_alignBaseline="@id/Settings"
                android:layout_toRightOf="@id/Settings"
                android:id="@+id/Text1"/>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/Settings"
                android:layout_toRightOf="@id/Text1"
                android:background="@drawable/border"
                android:id="@+id/Baud_Rate"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/Baud_Rate"
                android:layout_alignBaseline="@id/Settings"
                android:text="update firmware"
                android:id="@+id/Text2"/>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/Text2"
                android:layout_alignBaseline="@id/Settings"
                android:background="@drawable/border"
                android:id="@+id/firmwareSpinner"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Settings"
                android:onClick="onClickFirmwareUpdate"
                android:id="@+id/firmware"
                android:text="Update Firmware"/>
            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/firmware"
                android:id="@+id/ItemList"
                android:visibility="visible"
                ></ListView>

            <RelativeLayout
                android:layout_below="@id/ItemList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:id="@+id/Control">

                <io.github.controlwear.virtual.joystick.android.JoystickView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    xmlns:custom="http://schemas.android.com/apk/res-auto"
                    custom:JV_buttonColor="@color/colorGreyDark"
                    custom:JV_borderColor="@color/colorGreyDark"
                    custom:JV_backgroundColor="@color/colorGrey"
                    custom:JV_borderWidth="4dp"
                    custom:JV_fixedCenter="true"
                    android:id="@+id/joystick"/>
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>
</LinearLayout>